{
  "name": "dota2-heroes",
  "version": "0.0.0-semantically-released",
  "description": "Get random Dota 2 hero name",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "babel src/index.js -o dist/index.js",
    "postbuild": "cp src/dota2-heroes.json dist/dota2-heroes.json",
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "npm run test",
    "test": "mocha src/index.test.js -w --compilers js:babel/register",
    "test:single": "istanbul cover -x *.test.js node_modules/mocha/bin/_mocha -- -R spec src/index.test.js --compilers js:babel/register",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Den-dp/dota2-heroes.git"
  },
  "keywords": [
    "random",
    "Dota2",
    "hero"
  ],
  "author": "Den-dp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Den-dp/dota2-heroes/issues"
  },
  "homepage": "https://github.com/Den-dp/dota2-heroes#readme",
  "dependencies": {
    "unique-random-array": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^6.0.2",
    "chai": "^3.2.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.3.0",
    "cz-conventional-changelog": "^1.1.0",
    "ghooks": "^0.3.2",
    "istanbul": "^0.4.0",
    "mocha": "^2.2.5",
    "semantic-release": "^4.3.5"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
